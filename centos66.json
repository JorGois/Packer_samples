{
  "provisioners": [
    {
      "type": "shell",
      "override": {
        "virtualbox-iso": {
          "inline": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": "<tab> <wait5> noverifyssl ks=https://github.com/JorGois/parcker_example/blob/master/ks/ks.cfg <wait><enter>",
      "boot_wait": "4s",
      "guest_os_type": "Linux",
      "iso_checksum": "8c14c9a379aa7c7477471938ca06447d",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirrors.kernel.org/centos/6.6/isos/i386/CentOS-6.6-i386-minimal.iso",
      "ssh_username": "root",
      "ssh_password": "gois",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": false,
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": ["vagrant"]
}
